<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TASProgmob_Mawar.KategoriPage" Title="Kategori">
  <StackLayout>
    <ListView x:Name="listKategori" ItemsSource="{Binding ListKategori}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding KategoriId}"
                    Detail="{Binding NamaKategori}" DetailColor="Red" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button x:Name="btnCari" Text="Cari" />
    <Button x:Name="btnTambah" Text="Tambah"/>
  </StackLayout>
</ContentPage>