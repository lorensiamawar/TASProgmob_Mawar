<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TASProgmob_Mawar.EditJenisMotorPage" Title="Edit Jenis Motor">
  <StackLayout>
    <Label Text="ID" />
    <Entry x:Name="txtIdJenisMotor" IsEnabled="False" Text="{Binding IdJenisMotor}" />
    <Label Text="Nama Merk" />
    <Entry x:Name="txtNamaMerk" Text="{Binding NamaMerk}" />
    <Label Text="Nama Jenis Motor" />
    <Entry x:Name="txtNamaJenis" Text="{Binding NamaJenisMotor}" />
    <StackLayout Orientation="Horizontal">
      <Button x:Name="btnEdit" Text="Edit" />
      <Button x:Name="btnDelete" Text="Delete" />
    </StackLayout>
  </StackLayout>          
 </ContentPage>